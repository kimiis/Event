<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Eni-Sortie{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    {#    si je créer le %block header c'est pour le faire que dans 1 et une seule page #}

    <div class="titre">
        <h1>Eni-Sortie</h1>
    </div>

    <div class="menuNav">
        <nav class="menu">
            <ul>
                <li>
                    <a href="{{ path('app_home') }}" class="nav">Home</a>


                    {% if app.user %}

                        <a href="{{ path('app_listeEvents') }}" class="nav">Events</a>
                        <a href="{{ path('app_create') }}" class="nav">Create event</a>
                        <a href="{{ path('app_logout') }}">Logout</a>
                        <a href="{{ path('_profil') }}">Profil</a>
                        <a href="{{ path('_city') }}" >Add City</a>
                        <a href="{{ path('_place') }}" >Add Place</a>

                    {% endif %}

                    {% if not app.user %}

                        <a href="{{ path('app_register') }}">S'enregistrer</a>
                        <a href="{{ path('app_login') }}">Login</a>

                    {% endif %}

                </li>

            </ul>
        </nav>

    </div>


</header>
{% block body %}{% endblock %}
</body>
</html>