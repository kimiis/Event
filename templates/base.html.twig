<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}HappEvent{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="{{ asset('css/nav.css') }}">
    {% block stylesheets %}
        {#            {{ encore_entry_link_tags('app') }} #}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    {#    si je créer le %block header c'est pour le faire que dans 1 et une seule page #}




    <div class="main-container">

        <div class="bat-container" id="bats"></div>

        <div class="background bg-start" id="background-container"></div>

        <audio src="{{ asset('audios/h1.mp3') }}" controls></audio>

        <div class="logo">
            <img src="{{ asset('images/logoHalloween.png') }}" class="logo" width="900rem">
        </div>

        <div class="navMenu">
            <nav class="menu">
                <ul>
                    <li>
                        <a href="{{ path('app_home') }}" class="nav">Home</a>


                        {% if app.user %}

                            <a href="{{ path('app_listeEvents') }}" class="nav">Events</a>
                            <a href="{{ path('app_create') }}" class="nav">Create event</a>
                            <a href="{{ path('app_logout') }}">Logout</a>
                            <a href="{{ path('_profil') }}">Profil</a>

                        {% endif %}

                        {% if not app.user %}

                            <a href="{{ path('app_register') }}">S'enregistrer</a>
                            <a href="{{ path('app_login') }}">Login</a>

                        {% endif %}

                    </li>

                </ul>
            </nav>

        </div>

        <div class="fog-container" id="fog-container">

            <div class="fog fog-part-1"></div>
            <div class="fog fog-part-2"></div>

            <div class="bat-container-spiral hidden" id="bats2"></div>
        </div>




</header>
{% block body %}{% endblock %}
</body>
</html>